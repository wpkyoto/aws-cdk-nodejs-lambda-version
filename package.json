{
  "name": "@wpkyoto/nodejs-lambda-version",
  "version": "0.1.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "lint": "tsdx lint",
    "test": "jest",
    "prepare": "tsc",
    "clean": "npm run clean:resource && npm run clean:test",
    "clean:resource": "rimraf ./lib/***/*.js ./lib/***/*.d.ts",
    "clean:test": "rimraf ./test/***/*.js ./test/***/*.d.ts",
    "clean:example": "rimraf ./example/***/*.js ./example/***/*.d.ts",
    "semantic-release": "semantic-release"
  },
  "author": "Hidetaka Okamoto",
  "engines": {
    "node": ">=10"
  },
  "bugs": {
    "url": "https://github.com/wpkyoto/nodejs-lambda-version/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wpkyoto/nodejs-lambda-version.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "tsdx lint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@aws-cdk/assert": "1.47.0",
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-conventional": "9.0.1",
    "@types/jest": "^25.2.1",
    "@types/node": "10.17.5",
    "husky": "^4.2.5",
    "jest": "^25.5.0",
    "lint-staged": "^10.2.11",
    "semantic-release": "^17.1.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.10.2",
    "tsdx": "^0.13.2",
    "typescript": "~3.7.2"
  },
  "peerDependencies": {
    "@aws-cdk/core": "1.47.0"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-nodejs": "^1.47.0",
    "@aws-cdk/core": "1.47.0"
  }
}
